<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!---이미지 넣을 곳-->
    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="35dp"
        android:id="@+id/bot_Image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"
        android:textSize="20sp"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/bot_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BotName"
        android:textSize="25sp"
        android:textColor="@color/appskycolor"
        app:layout_constraintLeft_toRightOf="@id/bot_Image"
        app:layout_constraintTop_toTopOf="@id/bot_Image"
        android:layout_marginLeft="25dp"/>
    <TextView
        android:id="@+id/bot_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text = "설명을 적어주세요"
        android:textColor="#9d9d9d"
        android:textSize="20sp"
        android:layout_marginStart="170dp"
        app:layout_constraintTop_toBottomOf="@id/bot_name"
        />







</androidx.constraintlayout.widget.ConstraintLayout>
