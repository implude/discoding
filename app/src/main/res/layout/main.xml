<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".Appmain">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

      <android.widget.Button
          android:id="@+id/mHosting_btn"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:background="@drawable/main_button"
          android:text="hosting"
          android:textAllCaps="false"
          android:textColor="#FFFFFF"
          android:textSize="18sp" />

      <android.widget.Button
          android:id="@+id/mMain_btn"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:background="@drawable/main_button"
          android:backgroundTint="#2F3136"
          android:text="main"
          android:textAllCaps="false"
          android:textColor="@color/appskycolor"
          android:textSize="18sp" />

      <android.widget.Button
          android:id="@+id/mShare_btn"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:background="@drawable/main_button"
          android:text="share"
          android:textAllCaps="false"
          android:textColor="#FFFFFF"
          android:textSize="18sp" />
    </LinearLayout>

    <android.widget.Button
        android:id="@+id/mPlus_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="35dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/mainplus_button"
        android:text="+"
        android:textColor="@color/white"
        android:textSize="25dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="20dp"
        android:background="@color/white" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/mainrecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="45dp"
        tools:itemCount="90"
        tools:listitem="@layout/bot_image" />
  </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>